# ================================================
# StepGuard - Variables de Entorno
# ================================================
# IMPORTANTE: Copiar este archivo como .env y configurar los valores

# ================================================
# SERVIDOR
# ================================================
PORT=3000
NODE_ENV=development

# ================================================
# BASE DE DATOS POSTGRESQL
# ================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stepguard
DB_USER=postgres
DB_PASSWORD=postgres

# ================================================
# REDIS (Datos de dispositivos ESP32)
# ================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ================================================
# JWT (JSON Web Tokens)
# ================================================
JWT_SECRET=tu_clave_secreta_super_segura_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# ================================================
# CORS (Permitir solicitudes desde el frontend)
# ================================================
CORS_ORIGIN=http://localhost:5173

# ================================================
# LOGS
# ================================================
LOG_LEVEL=debug
