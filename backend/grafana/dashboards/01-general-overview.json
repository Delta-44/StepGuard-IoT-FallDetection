          "format": "table",
          "group": [],
          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT \n  ec.fecha_hora as \"Fecha y Hora\",\n  u.nombre as \"Usuario\",\n  d.nombre as \"Dispositivo\",\n  ec.severidad as \"Severidad\",\n  ec.estado as \"Estado\",\n  ec.is_button_pressed as \"SOS Manual\",\n  ec.impact_count as \"Impactos\",\n  COALESCE(c.nombre, 'Pendiente') as \"Atendido Por\"\nFROM eventos_caida ec\nLEFT JOIN usuarios u ON ec.usuario_id = u.id\nLEFT JOIN dispositivos d ON ec.dispositivo_mac = d.mac_address\nLEFT JOIN cuidadores c ON ec.atendido_por = c.id\nWHERE $__timeFilter(ec.fecha_hora)\nORDER BY ec.fecha_hora DESC\nLIMIT 50;",
          "refId": "A",
