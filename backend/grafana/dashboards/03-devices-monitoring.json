          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT \n  d.mac_address as \"MAC Address\",\n  d.nombre as \"Nombre\",\n  d.estado as \"Estado\",\n  d.total_impactos as \"Total Impactos\",\n  d.ultima_magnitud as \"Última Magnitud\",\n  u.nombre as \"Usuario Asignado\",\n  d.ultima_conexion as \"Última Conexión\",\n  d.fecha_registro as \"Fecha Registro\"\nFROM dispositivos d\nLEFT JOIN usuarios u ON d.mac_address = u.dispositivo_mac\nORDER BY d.estado DESC, d.ultima_conexion DESC;",
          "refId": "A"
        }
