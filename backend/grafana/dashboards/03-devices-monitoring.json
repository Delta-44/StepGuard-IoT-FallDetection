          "group": [],
          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT \n  d.nombre as \"Dispositivo\",\n  d.mac_address as \"MAC\",\n  COUNT(ec.id) as \"Total Eventos\",\n  SUM(CASE WHEN ec.severidad = 'critical' THEN 1 ELSE 0 END) as \"Críticos\",\n  MAX(ec.fecha_hora) as \"Último Evento\",\n  d.total_impactos as \"Total Impactos\"\nFROM dispositivos d\nLEFT JOIN eventos_caida ec ON d.mac_address = ec.dispositivo_mac\nWHERE $__timeFilter(ec.fecha_hora) OR ec.fecha_hora IS NULL\nGROUP BY d.nombre, d.mac_address, d.total_impactos\nORDER BY COUNT(ec.id) DESC;",
          "refId": "A"
        }
      ],
